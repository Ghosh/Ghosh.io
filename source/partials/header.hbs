      <div class="col-s-12">
        <div class="header__inner">

          <a href="/">
            <svg class="header__logo"><use xlink:href="#logo" /></svg>
          </a>

          <ul class="header__nav nav {{#if file.frontMatter.cover}}nav--white{{/if}}">
            <li class="nav__item"><a href="/about.html" class="nav__link">About</a></li>
