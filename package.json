{
  "name": "ghosh-portfolio",
  "private": true,
  "description": "Codebase for Indrashish Ghosh's portfolio",
  "version": "0.1.0",
  "author": "Indrashish Ghosh",
  "scripts": {
    "commit": "npx git-cz",
    "dev": "next",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "next": "^9.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
